package com.savefish.screens;

import com.badlogic.gdx.Game;
import com.badlogic.gdx.Gdx;
import com.badlogic.gdx.Screen;
import com.badlogic.gdx.graphics.Texture;
import com.badlogic.gdx.scenes.scene2d.Stage;
import com.savefish.screens.actors.ActiveImage;

public class MainMenuScreen implements Screen {

	private static MainMenuScreen mms = null;

	public static MainMenuScreen getInstance(Game game) {
		if (null == mms)
			mms = new MainMenuScreen(game);
		return mms;
	}

	@SuppressWarnings("unused")
	private Game game;

	private MainMenuScreen(Game game) {
		super();
		this.game = game;
		this.load();
	}

	private Stage stage = new Stage(Gdx.graphics.getWidth(),
			Gdx.graphics.getHeight(), true);

	private Texture startTexture = new Texture(Gdx.files.internal("start.png"));

	private Texture quitTexture = new Texture(Gdx.files.internal("end.png"));

	private ActiveImage startImage = new ActiveImage(startTexture);

	private ActiveImage quitImage = new ActiveImage(quitTexture);

	private void load() {
		this.startImage.x = 50;
		this.startImage.y = 50;
		this.quitImage.x = 200;
		this.quitImage.y = 50;
		this.stage.addActor(startImage);
		this.stage.addActor(quitImage);
	}

	@Override
	public void render(float delta) {
		// TODO Auto-generated method stub
		stage.act(Gdx.graphics.getDeltaTime());
		stage.draw();
	}

	@Override
	public void resize(int width, int height) {
		// TODO Auto-generated method stub

	}

	@Override
	public void show() {
		// TODO Auto-generated method stub

	}

	@Override
	public void hide() {
		// TODO Auto-generated method stub

	}

	@Override
	public void pause() {
		// TODO Auto-generated method stub

	}

	@Override
	public void resume() {
		// TODO Auto-generated method stub

	}

	@Override
	public void dispose() {
		// TODO Auto-generated method stub
		this.quitTexture.dispose();
		this.startTexture.dispose();
		this.startImage = null;
		this.quitImage = null;
		this.stage.dispose();
		this.game.dispose();
	}

}
