package com.savefish.desktop;

import com.badlogic.gdx.backends.lwjgl.LwjglApplication;
import com.badlogic.gdx.backends.lwjgl.LwjglApplicationConfiguration;
import com.savefish.constant.Constant;
import com.savefish.service.ApplicationManager;

public class DesktopLauncher {

	public static LwjglApplication saveFish = null;

	public static void main(String[] argv) {
		LwjglApplicationConfiguration config = new LwjglApplicationConfiguration();
		config.title = Constant.game.GAME_NAME;
		config.forceExit = true;
		config.width = Constant.screen.SCREEN_WIDTH;
		config.height = Constant.screen.SCREEN_HEIGHT;
		config.samples = 0;
		config.depth = 0;
		config.vSyncEnabled = true;
		config.useCPUSynch = false;
		config.useCPUSynch = true;
		config.fullscreen = false;
		config.resizable = true;
		saveFish = new LwjglApplication(new ApplicationManager(), config);
	}
}
