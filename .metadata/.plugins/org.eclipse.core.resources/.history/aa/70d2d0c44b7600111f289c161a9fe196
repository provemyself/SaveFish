package com.savefish.util.logger;

import java.util.logging.Logger;

import com.badlogic.gdx.Gdx;

public class TestLogger {
	static public final int NONE = 0;
	static public final int ERROR = 1;
	static public final int INFO = 2;
	static public final int DEBUG = 3;

	private final String tag;
	private int level;

	private static TestLogger logger = null;

	public static TestLogger getInstance(String tag) {
		if (null == logger)
			logger = new TestLogger(tag);
		return logger;
	}

	public static TestLogger getInstance(String tag, int level) {
		if (null == logger)
			logger = new TestLogger(tag, level);
		return logger;
	}

	private TestLogger(String tag) {
		this(tag, ERROR);
	}

	private TestLogger(String tag, int level) {
		this.tag = tag;
		this.level = level;
	}

	public void debug(String message) {
		if (level >= DEBUG)
			Gdx.app.debug(tag, message);
	}

	public void debug(String message, Exception exception) {
		if (level >= DEBUG)
			Gdx.app.debug(tag, message, exception);
	}

	public void info(String message) {
		
		if (level >= INFO)
			Logger.getAnonymousLogger().info(message);
	}

	public void info(String message, Exception exception) {
		if (level >= INFO)
			Gdx.app.log(tag, message, exception);
	}

	public void error(String message) {
		if (level >= ERROR)
			Gdx.app.error(tag, message);
	}

	public void error(String message, Throwable exception) {
		if (level >= ERROR)
			Gdx.app.error(tag, message, exception);
	}

	public void setLevel(int level) {
		this.level = level;
	}

	public int getLevel() {
		return level;
	}
}
